<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->
    <style name="SettingsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsTextStart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_weight">.75</item>
    </style>

    <style name="SettingsTextEnd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_weight">.25</item>
    </style>

    <style name="SettingsEditTextEnd">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">36sp</item>
        <item name="background">@drawable/edittext_box</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_weight">.25</item>
    </style>

    <style name="SettingsBtnStart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_weight">.95</item>
    </style>

    <style name="SettingsBtnEnd" parent="@style/SmallBtn">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="SettingsRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SettingsHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="SmallBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FixedFont" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">"@font/MONOSPACE"</item>
    </style>
</resources>